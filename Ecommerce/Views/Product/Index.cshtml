                    <div class="row">
                        <div class="col-sm-5">
                            <h2>Quản Lý <b>Sản Phẩm</b></h2>
                        </div>
                        <div class="col-sm-7">
                            <a asp-action="CreateProduct" asp-controller="Product" class="btn btn-secondary"><i class="material-icons">&#xE147;</i> <span>Add New Product</span></a>
